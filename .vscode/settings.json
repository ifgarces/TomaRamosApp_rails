{
    // Shell scripts schema works better for config files as variables are properly highlighted
    "files.associations": {
        "nginx.conf": "shellscript"
    },
    // Making sure the IDE will not do strange things in Makefiles
    "[makefile]": {
        "editor.insertSpaces": false,
        "editor.detectIndentation": false
    },
    // Setting code formatting rules for the project
    "[ruby]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    // Adding recurrent words that should be included in the workspace dictionary (spell check)
    "cSpell.words": [
        "assistantships",
        "datetime",
        "tomaramos",
        "TOMARAMOSAPP",
        "uninscribe"
    ],
}