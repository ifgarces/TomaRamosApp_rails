<% userInscribedCourses = @currentUser.getInscribedCourses() %>
<% userHasCourses = (userInscribedCourses.count() != 0) %>

<div class="container text-center mb-4">
  <div class="row my-3">
    <div class="col">
      <%= link_to(
            raw("<i class='bi bi-book me-2'></i> ") + "Catálogo",
            "/catalog",
            class: "btn btn-primary shadow-sm"
          ) %>
    </div>
    <% if (userHasCourses) %>
      <div class="col">
        <%= button_to(
              raw("<i class='bi bi-trash3-fill me-2'></i> ") + "Limpiar cursos",
              "/uninscribe-all",
              class: "btn btn-outline-warning shadow-sm",
              method: :post
            ) %>
      </div>
    <% end %>
  </div>

  <% if (@inDebugMode) %>
    <%= button_to(
          "[debug] Clear session",
          "/debug-clear-session",
          class: "btn btn-sm btn-danger shadow-sm text-white",
          method: :post
        ) %>
  <% end %>
</div>

<hr>

<div class="container container-xl bg-secondary text-white text-center text-uppercase rounded-top py-1 mb-0 mt-4">
  <small class="ms-4 me-3" style="font-size: 16px;"><strong>Ramos inscritos</strong></small>
  <small style="font-size: 11px;">Créditos: <%= @currentUser.computeCredits() %></small>
</div>

<div id="UserInscribedCoursesContainer"
  class="container container-xl border-start border-end border-bottom border-secondary px-2 pt-2 pb-1 mt-0"
  style="background-color: rgba(35,47,61,0.05);">
  <% if (userHasCourses) %>
    <%= render(
          partial: "course_instances/course_instance_collection",
          locals: {
            courseInstances: userInscribedCourses
          }
        ) %>
  <% else %>
    <p>(vacío)</p>
  <% end %>
</div>
